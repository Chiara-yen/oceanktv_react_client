@css {
  @import 'suitcss-utils-display';
}


.SideNav {
  background-color #000
  width 115px
  height 100%
  position relative
  display flex
  flex-direction column
  justify-content space-between
}

.SideNav-up {
  flex-direction column
  display flex
  overflow-y auto
  overflow-x hidden
}

.SideNav-link {
  display block
  color #fff
  text-align center
  text-decoration none
  padding 20px 15px
  transition-duration 0.3s
  position relative

  &:hover {
    background-color #06244a

    & > .ic_menu_home {
      border-color #fff
    }
  }

  &.is-current {
    background-color #0c4993
    color #fff
  }

  & > .ic {
    display block
    font-size 1.8em
    margin 0 auto
  }

  & > p {
    font-size 16px
    letter-spacing 2px
    margin-top 10px
    margin-bottom 0
  }

  &--home {
    background-color #000
    width 100%
    // position absolute
    bottom 0
    box-sizing border-box
    font-size 1.8em

    & > .ic {
      display inline-block
      font-size 1em
    }
  }
}

.SideNav-goback {
  border-radius 20px
  border 1px solid #fff
  padding 6px
  vertical-align middle
}

.SideNav-bagging {
  position absolute
  top 12px
  font-size 12px
  border 1px solid #fff
  background-color #a1136a
  padding 0.04em 0.4em
  border-radius 1em
  left 65px
}
