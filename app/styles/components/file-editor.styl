@css {
  @import 'suitcss-utils-display';
}

$border-box {
  box-sizing border-box
}

.FileEdit {
}

.FileEdit-row {
  display flex
  align-items center
  margin 20px 0
}

.FileEdit-label {
  @extends $border-box
  flex 1 0 auto
  text-align right
  padding-right 30px
}

.FileEdit-input {
  @extends $border-box
  width 500px

  & > input[type="text"] {
    line-height 1.5
    width 100%
    padding 5px 10px
    outline none
    box-sizing inherit
  }
}

.FileEdit-radio {
  @extends $border-box
  display inline-block
  padding-left 10px

  & > label {
    padding-left 10px
  }
}

.FileEdit-originalName {
  font-size 18px
  font-weight normal
  margin 20px 0
}

.FileEdit-prelisten {
  padding 3px
  font-size 14px
  cursor pointer

  &:hover {
    color #00c9ff
  }
}
