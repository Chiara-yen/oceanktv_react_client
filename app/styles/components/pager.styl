.Pager-select {
  display none
  width 70px
  font-size 14px

  .Select-input,
  .Select-control  {
    height 19px
  }
  .Select-placeholder {
    line-height 19px
  }
}

.Pager-title-context {
  text-overflow ellipsis
  white-space nowrap
  max-width 60%
  display inline-block
  overflow hidden
}
