
$Pager-basic {
  border 1px solid #fff
  padding 0.2em 0.5em
  margin-left 0.6em

  &.ic_topbar_top {
    border-radius 0.4em 0 0 0.4em
  }

  &.ic_topbar_bottom {
    border-radius 0 0.4em 0.4em 0
  }
}

.Pager {
  @extends $Pager-basic
  cursor pointer

  &:hover {
    color: #00ffff;
    border-color: #00ffff;
  }
}

.Pager-disable {
  @extends $Pager-basic
  opacity 0.5
}

